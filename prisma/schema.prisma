// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(cuid())
  createdAt Int
  updatedAt Int

  email String @unique @db.VarChar(50)
  name  String @db.VarChar(50)
  hash  String
  level String @default("user") @db.VarChar(10)

  Session Session[]
  Product Product[]

  @@map("users")
}

model Session {
  id        String @id @default(cuid())
  createdAt Int
  updatedAt Int

  userAgent String
  hashToken String

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Product {
  id        String @id @default(cuid())
  createdAt Int
  updatedAt Int

  name        String @db.VarChar(200)
  description String
  price       Int
  amount      Int

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("products")
}
